<Window x:Class="XRayJournal.UI2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XRayJournal.UI2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF171717">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgPatients" d:ItemsSource="{d:SampleData ItemCount=5}" 
                  Margin="0,0,0,0" Grid.Row="1" Background="#FF171717" BorderBrush="#FF13406B" 
                  AlternatingRowBackground="#FF888888" RowBackground="#FF4E4E4E" 
                  HeadersVisibility="Column" Padding="1,0,0,0" ColumnWidth="Auto">
            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF353535"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        <Menu Background="#FF353535">
            <MenuItem Header="Меню" Background="#FF353535" BorderBrush="#FF353535" Foreground="White" HorizontalAlignment="Left">
                <MenuItem x:Name="Exit" Header="Закрыть программу" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="RefreshButton" Content="Обновить" HorizontalAlignment="Left" Margin="10,10,0,0" 
				Grid.Row="2" VerticalAlignment="Top" Height="25" Click="RefreshButton_Click" Padding="3,1,3,1"/>
        <Button x:Name="SearchPatientButton" Content="Поиск пациента" HorizontalAlignment="Left" Margin="155,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="25" Padding="5,1,5,1" Click="SearchPatientButton_Click"/>
        <Button x:Name="CreateButton" Content="Создать пациента" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Padding="3,1,3,1" Height="25" Click="CreateButton_Click"/>

    </Grid>
</Window>
