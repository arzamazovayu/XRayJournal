<Window x:Class="XRayJournal.UI2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XRayJournal.UI2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF171717">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dgPatients" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,0" Grid.Row="1" Background="#FF171717" BorderBrush="#FF13406B" AlternatingRowBackground="#FF888888" RowBackground="#FF4E4E4E" HeadersVisibility="Column" >
            <DataGrid.ColumnHeaderStyle>
                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#FF353535"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        <Menu Background="#FF353535">
            <MenuItem Header="Меню" Background="#FF353535" BorderBrush="#FF353535" Foreground="White" HorizontalAlignment="Left">
                <MenuItem x:Name="Exit" Header="Закрыть программу" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="RefreshButton" Content="Сохранить изменения" HorizontalAlignment="Left" Margin="10,10,0,0" 
				Grid.Row="2" VerticalAlignment="Top" Height="25" Width="140" Click="RefreshButton_Click"/>

        <!--<TextBox x:Name="SecondNameBox" HorizontalAlignment="Left" Margin="50,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="FirstNameBox" HorizontalAlignment="Left" Margin="50,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ThirdNameBox" HorizontalAlignment="Left" Margin="50,150,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="BirthDateBox" HorizontalAlignment="Left" Margin="50,200,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="SexComboBox" HorizontalAlignment="Left" Margin="50,250,0,0" VerticalAlignment="Top" Width="50" Height="20"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="50,25,0,0" VerticalAlignment="Top"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="50,75,0,0" VerticalAlignment="Top"/>
        <Label Content="Отчество" HorizontalAlignment="Left" Margin="50,125,0,0" VerticalAlignment="Top"/>
        <Label Content="Возраст" HorizontalAlignment="Left" Margin="50,175,0,0" VerticalAlignment="Top"/>
        <Label Content="Пол" HorizontalAlignment="Left" Margin="50,225,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddButton" Content="Добавить" HorizontalAlignment="Left" Margin="80,300,0,0" VerticalAlignment="Top" Width="60" Height="20"/>
        <Button x:Name="CancelButton" Content="Отмена" HorizontalAlignment="Left" Margin="80,330,0,0" VerticalAlignment="Top" Width="60" Height="20"/>-->

    </Grid>
</Window>
