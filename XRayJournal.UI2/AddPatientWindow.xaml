<Window x:Class="XRayJournal.UI2.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XRayJournal.UI2"
        mc:Ignorable="d"
        Title="AddPatientWindow" Height="200" Width="800" Background="#FF171717">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="EnterField">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="3,0,3,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="#FF353535"/>
            <Setter Property="Foreground" Value="#FFD4D4D4"/>
        </Style>
        <Style TargetType="Label" x:Key="Label">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Foreground" Value="#FF8E8D8D"/>

        </Style>
        <Style TargetType="Button" x:Key="Button">
            <Setter Property="Background" Value="#FF353535"/>
            <Setter Property="Foreground" Value="#FFD4D4D4"/>

        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SecondNameBox" Style="{StaticResource ResourceKey=EnterField}"
                 Grid.ColumnSpan="1" Grid.Row="2" Grid.Column="1" />
        <TextBox x:Name="FirstNameBox" Style="{StaticResource ResourceKey=EnterField}"
                 Grid.ColumnSpan="1" Grid.Row="2" Grid.Column="2" />
        <TextBox x:Name="ThirdNameBox" Style="{StaticResource ResourceKey=EnterField}"
                 Grid.ColumnSpan="1" Grid.Row="2" Grid.Column="3" />
        <TextBox x:Name="BirthDateBox" Style="{StaticResource ResourceKey=EnterField}" ToolTip="дд.мм.гггг"
                 Grid.ColumnSpan="1" Grid.Row="2" Grid.Column="4"/>
        <ComboBox x:Name="SexComboBox" Margin="5" SelectedIndex="2"
                 Grid.ColumnSpan="1" Grid.Row="2" Grid.Column="5"
                 Background="#FF171717" Foreground="#FFD4D4D4">
            <ComboBoxItem Background="#FF171717" Foreground="#FFD4D4D4">Муж </ComboBoxItem>
            <ComboBoxItem Background="#FF171717" Foreground="#FFD4D4D4">Жен</ComboBoxItem>
            <ComboBoxItem Background="Black" Foreground="#FFD4D4D4">Иной</ComboBoxItem>
        </ComboBox>
        <Label Content="Фамилия" 
               Grid.ColumnSpan="1" Grid.Row="1" Grid.Column="1"
               Style="{StaticResource ResourceKey=Label}"
               />
        <Label Content="Имя" 
               Style="{StaticResource ResourceKey=Label}"
               Grid.ColumnSpan="1" Grid.Row="1" Grid.Column="2"
               />
        <Label Content="Отчество" 
               Style="{StaticResource ResourceKey=Label}"
               Grid.ColumnSpan="1" Grid.Row="1" Grid.Column="3"
               />
        <Label Content="Возраст (дд.мм.гггг)" 
               Style="{StaticResource ResourceKey=Label}"
               Grid.ColumnSpan="1" Grid.Row="1" Grid.Column="4"
               />
        <Label Content="Пол" 
               Style="{StaticResource ResourceKey=Label}"
               Grid.ColumnSpan="1" Grid.Row="1" Grid.Column="5"
               />
        <Button x:Name="AddButton" Content="Добавить" Margin="5" 
                Grid.Row="4" Grid.Column="1" Click="AddButton_Click"
                Style="{StaticResource ResourceKey=Button}"/>
        <Button x:Name="CancelButton" Content="Отмена" Margin="5" 
                Grid.Row="4" Grid.Column="5" Click="CancelButton_Click"
                Style="{StaticResource ResourceKey=Button}"/>
        <TextBox x:Name="InfoBox" Grid.Column="1" Grid.ColumnSpan="5" Margin="5" 
                 Grid.Row="5" TextWrapping="Wrap" Text="" Padding="3,0,0,0" 
                 BorderBrush="{x:Null}" Background="#FF171717" Foreground="#FFD4D4D4"/>

    </Grid>
</Window>
